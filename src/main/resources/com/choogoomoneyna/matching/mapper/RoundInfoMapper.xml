<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.choogoomoneyna.choogoomoneyna_be.matching.mapper.RoundInfoMapper">

    <!-- resultMap -->
    <resultMap id="RoundInfoResultMap" type="com.choogoomoneyna.choogoomoneyna_be.matching.vo.RoundInfoVO">
        <id property="id" column="round_info_id"/>
        <result property="roundNumber" column="round_number"/>
        <result property="startDate" column="start_date"/>
        <result property="endDate" column="end_date"/>
    </resultMap>

    <!-- 회차 번호로 조회 -->
    <select id="findRoundInfoByRoundNumber" resultMap="RoundInfoResultMap" parameterType="int">
        SELECT round_info_id, round_number, start_date, end_date
        FROM round_info
        WHERE round_number = #{roundNumber}
        LIMIT 1
    </select>

    <!-- 현재 회차 번호 조회 -->
    <select id="getRoundNumber" resultType="int">
        SELECT MAX(round_number) FROM round_info
    </select>

    <!-- 시작일 조회 -->
    <select id="getStartDate" resultType="date" parameterType="int">
        SELECT start_date
        FROM round_info
        WHERE round_number = #{roundNumber}
        LIMIT 1
    </select>

    <!-- 종료일 조회 -->
    <select id="getEndDate" resultType="date" parameterType="int">
        SELECT end_date
        FROM round_info
        WHERE round_number = #{roundNumber}
        LIMIT 1
    </select>

    <!-- 최신 회차 전체 정보 조회 -->
    <select id="findLatestRoundInfo" resultMap="RoundInfoResultMap">
        SELECT round_info_id, round_number, start_date, end_date
        FROM round_info
        ORDER BY round_number DESC
        LIMIT 1
    </select>

    <!-- 회차 삽입 -->
    <insert id="insertRoundInfo" parameterType="com.choogoomoneyna.choogoomoneyna_be.matching.vo.RoundInfoVO"
            useGeneratedKeys="true" keyProperty="id" keyColumn="round_info_id">
        INSERT INTO round_info (round_number, start_date, end_date)
        VALUES (#{roundNumber}, #{startDate}, #{endDate})
    </insert>

</mapper>
