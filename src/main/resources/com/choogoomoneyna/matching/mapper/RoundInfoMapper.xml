<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.choogoomoneyna.choogoomoneyna_be.matching.mapper.RoundInfoMapper">

    <!-- resultMap -->
    <resultMap id="RoundInfoResultMap" type="com.choogoomoneyna.choogoomoneyna_be.matching.vo.RoundInfoVO">
        <result property="roundNumber" column="round_number"/>
        <result property="startDate" column="start_date"/>
        <result property="endDate" column="end_date"/>
    </resultMap>

    <!-- 최신 회차 정보 한 건 조회 -->
    <select id="findRoundInfo" resultMap="RoundInfoResultMap">
        SELECT round_number, start_date, end_date
        FROM round_info
        ORDER BY round_number DESC
        LIMIT 1
    </select>

    <!-- 최신 회차 번호만 조회 -->
    <select id="getRoundNumber" resultType="int">
        SELECT round_number
        FROM round_info
        ORDER BY round_number DESC
        LIMIT 1
    </select>

    <!-- 최신 시작일만 조회 -->
    <select id="getStartDate" resultType="date">
        SELECT start_date
        FROM round_info
        ORDER BY round_number DESC
        LIMIT 1
    </select>

    <!-- 최신 종료일만 조회 -->
    <select id="getEndDate" resultType="date">
        SELECT end_date
        FROM round_info
        ORDER BY round_number DESC
        LIMIT 1
    </select>

    <!-- 회차 정보 전체 업데이트 (가장 최근 회차에 대해) -->
    <update id="updateRoundInfo" parameterType="com.choogoomoneyna.choogoomoneyna_be.matching.vo.RoundInfoVO">
        UPDATE round_info
        SET
            start_date = #{startDate},
            end_date = #{endDate}
        WHERE round_number = #{roundNumber}
    </update>

</mapper>
