<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.choogoomoneyna.choogoomoneyna_be.user.mapper.UserMatchingResultHistoryMapper">

    <resultMap id="UserMatchingResultHistoryResultMap"
               type="com.choogoomoneyna.choogoomoneyna_be.user.vo.UserMatchingResultHistoryVO">
        <result column="matching_id" property="matchingId"/>
        <result column="round_number" property="roundNumber"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="matching_result" property="matchingResult"/>
    </resultMap>

    <select id="findUserMatchingResultHistoriesByUserId"
            parameterType="long"
            resultMap="UserMatchingResultHistoryResultMap">
        SELECT
            h.matching_id,
            h.round_number,
            r.start_date,
            r.end_date,
            h.matching_result
        FROM user_matching_histories h
                 JOIN round_info r ON h.round_number = r.round_number
        WHERE h.user_id = #{userId}
        ORDER BY h.round_number DESC
    </select>

</mapper>

