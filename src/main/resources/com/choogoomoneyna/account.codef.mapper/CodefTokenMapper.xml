<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.choogoomoneyna.choogoomoneyna_be.account.codef.mapper.CodefTokenMapper">

    <!--최근 토큰 조회-->
    <select id="getLatestToken" resultType="com.choogoomoneyna.choogoomoneyna_be.account.codef.vo.CodefTokenVO">
        SELECT * FROM codef_token ORDER BY created_at DESC LIMIT 1
    </select>

    <!--토큰 삽입-->
    <insert id="insertToken">
        INSERT INTO codef_token (access_token, token_expiry_time) VALUES (#{accessToken}, #{tokenExpiryTime})
    </insert>

    <!--토큰 수정-->
    <update id="updateToken">
        UPDATE codef_token SET access_token = #{accessToken}, token_expiry_time = #{tokenExpiryTime}
        WHERE id = #{id}
    </update>

</mapper>